# ==============================================================================
# FOR DOCKER COMPOSE DEPLOYMENT
# ==============================================================================
# Copy this file to .env when using docker-compose
# These variables are used by docker-compose.yml

# PostgreSQL Password (required for Docker)
POSTGRES_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD

# JWT Secret (required)
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_RANDOM_32_CHAR_MINIMUM_SECRET

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Security (set to true in production with HTTPS)
SECURE_COOKIES=false

# Environment
ENVIRONMENT=development

# ==============================================================================
# FOR LOCAL DEVELOPMENT (without Docker)
# ==============================================================================
# Use these when running services locally

# Database Configuration
# REQUIRED: PostgreSQL connection string
# Format: postgres://user:password@host:port/database?sslmode=require
DATABASE_URL=postgres://scheduler:CHANGE_THIS_PASSWORD@localhost:5432/scheduler?sslmode=disable

# Redis Configuration
# REQUIRED: Redis connection URL
REDIS_URL=localhost:6379

# JWT Secret
# REQUIRED: Secret key for signing JWT tokens
# MUST be at least 32 characters
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_RANDOM_32_CHAR_MINIMUM_SECRET

# CORS Configuration
# Allowed origin for CORS requests (frontend URL)
CORS_ORIGIN=http://localhost:3000

# Server Configuration
SERVER_PORT=8080

# Security Configuration
# Set to "true" in production when using HTTPS
# CRITICAL: Must be "true" in production
SECURE_COOKIES=false

# Worker Configuration (optional)
# WORKER_INTERVAL=10s

# Environment
# Options: development, staging, production
ENVIRONMENT=development

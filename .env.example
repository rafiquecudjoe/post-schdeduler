# Database Configuration
# REQUIRED: PostgreSQL connection string
# Format: postgres://user:password@host:port/database?sslmode=require
DATABASE_URL=postgres://scheduler:CHANGE_THIS_PASSWORD@postgres:5432/scheduler?sslmode=require

# Redis Configuration
# REQUIRED: Redis connection URL
REDIS_URL=redis:6379

# JWT Secret
# REQUIRED: Secret key for signing JWT tokens
# MUST be at least 32 characters
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_RANDOM_32_CHAR_MINIMUM_SECRET

# CORS Configuration
# Allowed origin for CORS requests (frontend URL)
CORS_ORIGIN=http://localhost:3000

# Server Configuration
SERVER_PORT=8080

# Security Configuration
# Set to "true" in production when using HTTPS
# CRITICAL: Must be "true" in production
SECURE_COOKIES=false

# Worker Configuration (optional)
# WORKER_INTERVAL=10s

# Environment
# Options: development, staging, production
ENVIRONMENT=development
